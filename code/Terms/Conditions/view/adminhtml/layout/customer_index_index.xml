<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_listing">
            <arguments>
                <argument name="dataSource" xsi:type="object">Magento\Customer\Model\ResourceModel\Customer\Collection</argument>
            </arguments>
            <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer_listing.accepted_terms" as="accepted_terms">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Accepted Terms</argument>
                    <argument name="index" xsi:type="string">accepted_terms</argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="options" xsi:type="array">
                        <item name="1" xsi:type="string">Yes</item>
                        <item name="0" xsi:type="string">No</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
